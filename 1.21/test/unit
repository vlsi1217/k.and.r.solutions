#!/usr/bin/env roundup

source helpers

describe "entab spaces with tabstop 4"

it_should_preserve_space() {
  assert_debtabs ". ." ". ."
}

it_should_preserve_two_spaces() {
  assert_debtabs ".  ." ".  ."
}

it_should_preserve_three_spaces() {
  assert_debtabs ".   ." ".\t."
}

it_tab_and_preserve_one() {
  assert_debtabs ".    ." ".\t ."
}

it_tab_and_preserve_two() {
  assert_debtabs ".     ." ".\t  ."
}

